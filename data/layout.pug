mixin header-nav
  .header-nav
    .right
      if meta.github
        a.iconlink(href='https://github.com/' + meta.github, data-title=meta.github)
          // span.title Open in GitHub
          span.icon.-github

mixin footer-nav(prev, next)
  if prev || next
    .footer-nav
      if prev
        .left
          a(href=prev.url)
            span.title= prev.pageTitle
      if next
        .right
          a(href=next.url)
            span.label= "Next: "
            span.title= next.pageTitle

